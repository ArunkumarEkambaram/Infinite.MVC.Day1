@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
            @*Hello, @User.Identity.Name*@
            @Html.ActionLink("Welcome, "+ @User.Identity.Name, "", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Sign Out", "SignOut", "Accounts", null, new { @class = "nav-link" })
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <li class="nav-item">
            @Html.ActionLink("Register", "Register", "Accounts", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Login", "Login", "Accounts", null, new { @class = "nav-link" })
        </li>
    </ul>
}
